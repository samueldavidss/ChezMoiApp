<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samuelsanchez.chezmoiapp.Views.FinanceActivity">


    <TextView
        android:id="@+id/userTv"
        android:text=" usuario 1"
        android:layout_width="wrap_content"
        android:textSize="16dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="30dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:layout_below="@id/userTv"
        android:id="@+id/financeTv"
        android:text="usuario 2"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingTop="12dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="20dp"
        android:layout_toRightOf="@id/financeTv"
        android:layout_below="@id/userTv"
        android:text="123456"
        android:id="@+id/payTv"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

